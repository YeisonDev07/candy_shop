generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Producto {
  id            BigInt      @id @default(autoincrement())
  nombre        String
  descripcion   String?
  precio        Float
  activo        Boolean     @default(true)
  stock         Int         @default(0)
  stockMinimo   Int         @default(5)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}